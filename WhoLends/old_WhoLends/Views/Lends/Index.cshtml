@model IEnumerable<WhoLends.Models.Lend>

@{
    ViewBag.Title = "Index";
}

<br/>
<div class="row">
    <div class="col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>Gegenstand ausleihen</h3>
                <p>
                    Einen neuen Gegenstand ausleihen
                </p>
                <p>
                    <a class="btn btn-default">
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                        @Html.ActionLink("erfassen", "Create") &raquo;
                    </a>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>Ausleihgegenstand</h3>
                <p>
                    Einen neuen Gegenstand zum Ausleihen
                </p>
                <p>
                    <a class="btn btn-default">
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                        @Html.ActionLink("erfassen", "CreateLendObject") &raquo;
                    </a>
                </p>
            </div>
        </div>
     </div>
    <div class="col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>Web Hosting</h3>
                <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
                <p><a class="btn btn-default" href="#">Learn more &raquo;</a></p>
            </div>
        </div>
     </div>
</div>
        <br />

        <h3>Ausgeliehene Gegenstände</h3>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LendObject.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LendObject.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LendObject.Condition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.From)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.To)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LendObject.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LendObject.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.From)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.To)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee)
                </td>
                <td>
                    <button type="button" class="btn btn-default btn-lg">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    </button>
                    <button type="button" class="btn btn-default btn-lg">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </button>
                    <button type="button" class="btn btn-default btn-lg">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        @Html.ActionLink("Details", "Details", new { id = item.ID })
                    </button>
                </td>
            </tr>
            }

        </table>
