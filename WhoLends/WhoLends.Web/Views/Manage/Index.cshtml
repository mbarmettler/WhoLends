@model WhoLends.Models.IndexViewModel

@{
    ViewBag.Title = "Verwalten";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Passe deinen Account an</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Passwort:</dt>
        <dd>
            <ul class="pager" style="margin-top:0px;">
                @if (Model.HasPassword)
                {   
                    <li class="previous">@Html.ActionLink("ändern", "ChangePassword")</li>
                }
                else
                {
                    <li class="previous">@Html.ActionLink("erstellen", "SetPassword")</li>
                }
            </ul>
        </dd>        
    </dl>
</div>
