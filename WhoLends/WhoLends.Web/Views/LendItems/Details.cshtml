            </a>
        </div>
     </div>
    <hr />
    <div class="row">
        <div class="col-xs-4 col-md-2">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.Condition)
