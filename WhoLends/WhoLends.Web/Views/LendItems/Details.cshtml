}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <h4>Detail - Ausleihgegenstand</h4>
    <br/>
    @*Image*@
    <div class="row">
        <div class="col-xs-6 col-md-3">
            <a href="#" class="thumbnail">
                <img src="~/Content/img/noimg.PNG" />
            </a>
        </div>
        <div class="col-xs-6 col-md-3">
            <a href="#" class="thumbnail">
