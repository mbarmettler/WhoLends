@using AutoMapper.Execution
@using WhoLends.Web.Helpers
@model WhoLends.ViewModels.LendItemViewModel

<div>
    <div class="row">
        @if (Model.ItemImageViewModels == null || !Model.ItemImageViewModels.Any())
        {
            <div class="col-xs-6 col-md-3">
                <a href="#" class="thumbnail">
                    <img src="~/Content/img/noimg.PNG" />
                </a>
            </div>
        }
        else
        {
            foreach (var im in Model.ItemImageViewModels)
            {
                <div class="col-xs-6 col-md-3">
                    <a href="#" class="thumbnail">
                        <img src="data:image;base64,@Convert.ToBase64String(im.Content)" />
                    </a>
                </div>
            }
        }
    </div>
    <hr/>

    <div class="row">
        <div class="col-xs-4 col-md-2">
            <dt>
                @Html.DisplayNameFor(model => model.Condition)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>
            <br/>
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.CustomerId)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
        </div>
        <div class="col-xs-6 col-md-3">
            <dd>
                @Html.DisplayFor(model => model.Condition)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.CurrentUserwithID)
            </dd>
            <br/>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.CustomerId)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dd>
                @Html.Raw(Html.Encode(Model.Description).Replace("\n", "<br />"))
            </dd>
        </div>
    </div>
</div>
