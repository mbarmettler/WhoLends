@model IEnumerable<WhoLends.Data.Lend>

@{
    ViewBag.Title = "Lends";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>Gegenstand ausleihen</h3>
                <p>
                    Einen neuen Gegenstand ausleihen
                </p>
                <p>
                    <a class="btn btn-default">
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                        @Html.ActionLink("erfassen", "Create") &raquo;
                    </a>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>Ausleihgegenstand</h3>
                <p>
                    Einen neuen Gegenstand zum Ausleihen
                </p>
                <p>
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    @Html.ActionLink("erfassen", "CreateLendObject") &raquo;
               </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>Web Hosting</h3>
                <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
                <p><a class="btn btn-default" href="#">Learn more &raquo;</a></p>
            </div>
        </div>
    </div>
</div>
<br />
<h3>Ausgeliehene Gegenstände</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LendItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.From)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.To)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.LendItem.Name)
        </td>
        <td>
            @Html.DisplayFor(model => item.From)
        </td>
        <td>
            @Html.DisplayFor(model => item.To)
        </td>
        <td>
            @Html.DisplayFor(model => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(model => item.User.UserName)
        </td>
        <td>
            @if (item.User.RoleId == 1)
            {
                <button type="button" class="btn btn-default btn-lg">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </button>
                <button type="button" class="btn btn-default btn-lg">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </button>
            }
            <button type="button" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </button>
        </td>
    </tr>
}
</table>
